<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <listener>
        <listener-class>com.publisher.webapp.data.Init</listener-class>
    </listener>
    <resource-ref>
        <description>Publisher DataSource</description>
        <res-ref-name>jdbc/publisher</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>NewsFeedServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.NewsFeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.HomeServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/index.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ListNewsItemServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.ListNewsItemServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/list-news-item.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ViewNewsItemServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.ViewNewsItemServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/view-news-item.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>EditNewsItemServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.EditNewsItemServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/edit-news-item.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AddNewsItemServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.AddNewsItemServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/edit-news-item.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DeleteNewsItemServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.DeleteNewsItemServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/delete-news-item.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.LoginServlet</servlet-class>
        <init-param>
            <param-name>dispatcher</param-name>
            <param-value>/WEB-INF/login.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.publisher.webapp.web.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublishNewsItemsService</servlet-name>
        <servlet-class>com.publisher.webapp.ws.PublishNewsItemsService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsFeedServlet</servlet-name>
        <url-pattern>/feed</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNewsItemServlet</servlet-name>
        <url-pattern>/list-news-items</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewNewsItemServlet</servlet-name>
        <url-pattern>/view-news-item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditNewsItemServlet</servlet-name>
        <url-pattern>/edit-news-item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewsItemServlet</servlet-name>
        <url-pattern>/create-news-item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteNewsItemServlet</servlet-name>
        <url-pattern>/delete-news-item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/deleteUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/addUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/editUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/listUsers.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/displayUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublishNewsItemsService</servlet-name>
        <url-pattern>/publish</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.publisher.webapp.web.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
